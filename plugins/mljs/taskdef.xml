<project default="all" basedir=".">

    <target name="all" depends="other.run, win.run">
    </target>

    <target name="sys.check">
        <condition property="isWindows">
            <os family="windows"/>
        </condition>
        <condition property="isOther">
            <not>
                <os family="windows"/>
            </not>
        </condition>
    </target>
    <target name="other.run" depends="sys.check" if="isOther">

        <copy file="${basedir}/../../corejs/target/classes/mwg.d.ts"
              todir="${basedir}/target/generated-sources/src/main"/>
        <copy file="${basedir}/src/package.json" todir="${basedir}/target"/>

        <copy file="${basedir}/src/mwg.ml.blas.ts" todir="${basedir}/target/generated-sources/src/main"/>

        <exec executable="npm" dir="${basedir}/target">
            <arg value="install"/>
        </exec>
        <exec executable="${basedir}/target/node_modules/typescript/bin/tsc"
              dir="${basedir}/target/generated-sources/src/main">
            <arg value="-d"/>
            <arg value="--sourceMap"/>
            <arg value="--target"/>
            <arg value="es5"/>
            <arg value="${basedir}/target/generated-sources/src/main/mwg.ml.ts"/>
            <arg value="--out"/>
            <arg value="mwg.ml.js"/>
        </exec>

        <!-- Copy Result -->
        <copy file="${basedir}/target/generated-sources/src/main/mwg.ml.d.ts" todir="${basedir}/target/classes"/>
        <copy file="${basedir}/target/generated-sources/src/main/mwg.ml.js" todir="${basedir}/target/classes"/>
        <copy file="${basedir}/target/generated-sources/src/main/mwg.ml.js.map" todir="${basedir}/target/classes"/>

        <exec executable="${basedir}/target/node_modules/typescript/bin/tsc" failonerror="true">
            <arg value="--target"/>
            <arg value="es5"/>
            <arg value="${basedir}/target/generated-test-sources/src/main/test.ts"/>
            <arg value="--out"/>
            <arg value="${basedir}/target/test-classes/mwg.test.js"/>
        </exec>

        <!-- Compile Netlib Blas -->
        <exec executable="${basedir}/target/node_modules/typescript/bin/tsc" failonerror="true" dir="${basedir}/target/generated-sources/src/main">
            <arg value="-d"/>
            <arg value="--sourceMap"/>
            <arg value="--target"/>
            <arg value="es5"/>
            <arg value="${basedir}/target/generated-sources/src/main/mwg.ml.blas.ts"/>
            <arg value="--out"/>
            <arg value="${basedir}/target/generated-sources/src/main/mwg.ml.blas.js"/>
        </exec>

        <copy file="${basedir}/target/generated-sources/src/main/mwg.ml.blas.d.ts" todir="${basedir}/target/classes"/>
        <copy file="${basedir}/target/generated-sources/src/main/mwg.ml.blas.js" todir="${basedir}/target/classes"/>
        <copy file="${basedir}/target/generated-sources/src/main/mwg.ml.blas.js.map" todir="${basedir}/target/classes"/>

        <concat destfile="${basedir}/target/test-classes/test.all.js" force="no">
            <filelist dir="${basedir}/../../corejs/target/classes" files="mwg.js"/>
            <filelist dir="${basedir}/src" files="spacer.js"/>
            <filelist dir="${basedir}/target/test-classes" files="mwg.test.js"/>
            <filelist dir="${basedir}/src" files="spacer.js"/>
            <filelist dir="${basedir}/target/generated-test-sources/src/main/"
                      files="testsRunner.js"/>
        </concat>

        <concat destfile="${basedir}/target/test-classes/test.all.dev.js" force="no">

            <filelist dir="${basedir}/../../corejs/target/classes" files="mwg.js"/>
            <filelist dir="${basedir}/src" files="spacer.js"/>
            <filelist dir="${basedir}/target/test-classes" files="mwg.test.js"/>
            <filelist dir="${basedir}/src" files="spacer.js"/>
            <filelist dir="${basedir}/target/generated-test-sources/src/main/"
                      files="testsRunnerDev.js"/>
        </concat>

        <copy file="${basedir}/src/test.js" todir="${basedir}/target"/>

        <exec executable="node" dir="${basedir}/target" failonerror="true">
            <arg value="test.js"/>
        </exec>

        <java jar="${basedir}/../../corejs/lib/compiler.jar" fork="true" failonerror="true">
            <arg value="--js"/>
            <arg value="${basedir}/target/classes/mwg.ml.js"/>
            <arg value="--js_output_file"/>
            <arg value="${basedir}/target/classes/mwg.ml.min.js"/>
        </java>
    </target>

    <target name="win.run" depends="sys.check" if="isWindows">
        <!-- TODO update -->
    </target>

</project>