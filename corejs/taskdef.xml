<project default="all" basedir=".">

    <target name="all" depends="other.run, win.run">
    </target>

    <target name="sys.check">
        <condition property="isWindows">
            <os family="windows"/>
        </condition>
        <condition property="isOther">
            <not>
                <os family="windows"/>
            </not>
        </condition>
    </target>
    <target name="other.run" depends="sys.check" if="isOther">
        <exec executable="npm">
            <arg value="install"/>
        </exec>
        <exec executable="node_modules/typescript/bin/tsc">
            <arg value="-d"/>
            <arg value="--sourceMap"/>
            <arg value="--target"/>
            <arg value="es5"/>
            <arg value="${basedir}/target/generated-sources/src/main/core.ts"/>
            <arg value="--out"/>
            <arg value="${basedir}/target/classes/mwg.js"/>
        </exec>

        <exec executable="node_modules/typescript/bin/tsc">
            <arg value="--target"/>
            <arg value="es5"/>
            <arg value="${basedir}/target/generated-test-sources/src/main/test.ts"/>
            <arg value="--out"/>
            <arg value="${basedir}/target/test-classes/mwg.test.js"/>
        </exec>

        <concat destfile="${basedir}/target/test-classes/test.all.js" force="no">
            <filelist dir="${basedir}/target/test-classes" files="mwg.test.js"/>
            <filelist dir="${basedir}/target/generated-test-sources/src/main/"
                      files="testsRunner.js"/>
        </concat>

        <concat destfile="${basedir}/target/test-classes/test.all.dev.js" force="no">
            <filelist dir="${basedir}/target/test-classes" files="mwg.test.js"/>
            <filelist dir="${basedir}/target/generated-test-sources/src/main/"
                      files="testsRunnerDev.js"/>
        </concat>

        <exec executable="node">
            <arg value="test.js"/>
        </exec>

        <java jar="${basedir}/lib/compiler.jar" fork="true" failonerror="true">
            <arg value="--js"/>
            <arg value="${basedir}/target/classes/mwg.js"/>
            <arg value="--js_output_file"/>
            <arg value="${basedir}/target/classes/mwg.min.js"/>
        </java>
    </target>

    <target name="win.run" depends="sys.check" if="isWindows">
        <exec executable="cmd" dir="${project.basedir}" failonerror="true">
            <arg line="/c npm install" />
        </exec>
        <exec executable="node_modules/typescript/bin/tsc">
            <arg value="-d"/>
            <arg value="--sourceMap"/>
            <arg value="--target"/>
            <arg value="es5"/>
            <arg value="${basedir}/target/generated-sources/src/main/core.ts"/>
            <arg value="--out"/>
            <arg value="${basedir}/target/classes/mwg.js"/>
        </exec>

        <exec executable="node_modules/typescript/bin/tsc">
            <arg value="--target"/>
            <arg value="es5"/>
            <arg value="${basedir}/target/generated-test-sources/src/main/test.ts"/>
            <arg value="--out"/>
            <arg value="${basedir}/target/test-classes/mwg.test.js"/>
        </exec>

        <concat destfile="${basedir}/target/test-classes/test.all.js" force="no">
            <filelist dir="${basedir}/target/test-classes" files="mwg.test.js"/>
            <filelist dir="${basedir}/target/generated-test-sources/src/main/"
                      files="testsRunner.js"/>
        </concat>

        <concat destfile="${basedir}/target/test-classes/test.all.dev.js" force="no">
            <filelist dir="${basedir}/target/test-classes" files="mwg.test.js"/>
            <filelist dir="${basedir}/target/generated-test-sources/src/main/"
                      files="testsRunnerDev.js"/>
        </concat>

        <exec executable="node">
            <arg value="test.js"/>
        </exec>

        <java jar="${basedir}/lib/compiler.jar" fork="true" failonerror="true">
            <arg value="--js"/>
            <arg value="${basedir}/target/classes/mwg.js"/>
            <arg value="--js_output_file"/>
            <arg value="${basedir}/target/classes/mwg.min.js"/>
        </java>
    </target>

</project>
